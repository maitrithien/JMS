@model DMS.Models.LoginModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <style>
        .login-box {
            width: 400px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 150px;
            background: #fff;
            color: #1b1b1b;
            font-weight: lighter;
            font-style: normal;
            font-size: smaller;
            box-shadow: 0px 0px 10px #000;
            -webkit-box-shadow: 0px 0px 10px #000;
        }
        input:-webkit-autofill {
            -webkit-box-shadow: 0 0 0px 1000px #fff inset;
        }
        input {
            border:none;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            /*-webkit-text-fill-color: #808080 !important;*/
        }
        .title {
            width: calc(100% + 20px);
            height: 24px;
            margin: -20px 0px 8px -20px;
            padding: 5px 10px;
            color: #fff;
            background: #0094ff;
            font-size: medium;
            font-weight: bolder;
        }
        .bottom-toolbar {
            position:relative;
            text-align: right;
            bottom: 0 !important;
            right: -10px !important;
        }
    </style>
    <fieldset class="login-box">
        <legend>Log in Form</legend>
        <div class="title">Đăng nhập hệ thống</div>
        @Html.ValidationMessageFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.Password)
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { style = "width:calc(100% - 20px)" })
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { style = "width:calc(100% - 20px)" })
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <div class="bottom-toolbar">
            <input type="submit" value="Đăng nhập" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
