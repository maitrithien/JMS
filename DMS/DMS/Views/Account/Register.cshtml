@model DMS.Models.RegisterModel

@{
    ViewBag.Title = "Đăng kys";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
        .login-box {
            width: 400px;
            margin: 0 auto;
            padding:0 20px;
            margin-top: 150px;
            background: #fff;
            color: #1b1b1b;
            font-weight: lighter;
            font-style: normal;
            font-size: smaller;
            box-shadow: 0px 0px 10px #000;
            -webkit-box-shadow: 0px 0px 0px #000;
        }
        input:-webkit-autofill {
            -webkit-box-shadow: 0 0 0px 1000px #fff inset;
        }
        input {
            border:none;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            /*-webkit-text-fill-color: #808080 !important;*/
        }
        .title {
            width: calc(100% + 20px);
            height: 24px;
            margin: -20px 0px 8px -20px;
            padding: 5px 10px;
            color: #fff;
            background: #0094ff;
            font-size: medium;
            font-weight: bolder;
            text-align: center;
            text-transform: uppercase;
        }
        .bottom-toolbar {
            position:relative;
            text-align: right;
            bottom: 0 !important;
            /*right: -10px !important;*/

        }
        input[type="submit"],
        input[type="button"],
        button {
            width: 110%;
        }
</style>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="login-box">
        <legend>Registration Form</legend>
        <div class="title">Thông tin đăng ký tài khoản mới</div>
        @Html.ValidationMessageFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { style = "width:calc(100% - 20px)" })
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { style = "width:calc(100% - 20px)" })
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { style = "width:calc(100% - 20px)" })
            </li>
        </ol>
        <div class="bottom-toolbar">
            <input type="submit" value="Đăng ký" />
        </div>
    </fieldset>
}

<script>
    $(document).ready(function () {
        $('#UserName').focus();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
