<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - DMS</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <link href="~/Content/kendoUI/kendo.common.core.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.common.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.material.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.material.mobile.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.rtl.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.dataviz.metro.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.dataviz.min.css" rel="stylesheet" />

        <script src="~/Scripts/kendoUI/jquery.min.js"></script>
        <script src="~/Scripts/kendoUI/angular.min.js"></script>
        <script src="~/Scripts/kendoUI/kendo.all.min.js"></script>
        <script src="~/Scripts/kendoUI/console.js"></script>
        <script src="~/Scripts/kendoUI/jszip.min.js"></script>

        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/common.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper module-intro">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Hệ thống quản lý hồ sơ", "Index", "Jobs")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    
                </div>
            </div>
            <div class="content-wrapper menu-context">
                <nav>
                    <ul id="menu">
                        @{
                            string cssClassIndex = string.Empty;
                            string cssClassJobsReceived = string.Empty;
                            string cssClassJobsSent = string.Empty;
                            string cssClassJobsOverdue = string.Empty;
                            string cssClassJobsEmployee = string.Empty;
                            string cssClassJobsStatc = string.Empty;
                            
                            DMS.Models.JMSEntities entity = new DMS.Models.JMSEntities();
                            bool isManager = entity.Employees.FirstOrDefault(x =>
                                            (!string.IsNullOrEmpty(x.GroupID) && !x.GroupID.Equals("0") && User.Identity.Name.Equals(x.EmployeeID))) != null;
                                              
                            if (ViewData.Keys.Contains("MenuSelected"))
                            {
                                string currentMenu = ViewData["MenuSelected"].ToString();
                                switch(currentMenu)
                                {
                                    case "Index": cssClassIndex = "selected";
                                        break;
                                    case "JobsReceived": cssClassJobsReceived = "selected";
                                        break;
                                    case "JobsSent": cssClassJobsSent = "selected";
                                        break;
                                    case "JobsOverdue": cssClassJobsOverdue = "selected";
                                        break;
                                    case "JobsEmployee": cssClassJobsEmployee = "selected";
                                        break;
                                    case "JobsStatc": cssClassJobsStatc = "selected";
                                        break;
                                }
                            }
                        
                            <li class="@cssClassIndex">@Html.ActionLink("Hồ sơ", "Index", "Jobs")</li>
                            <li class="@cssClassJobsReceived">@Html.ActionLink("Hồ sơ đã nhận", "JobsReceived", "Jobs")</li>
                            <li class="@cssClassJobsSent">@Html.ActionLink("Hồ sơ đã gửi", "JobsSent", "Jobs")</li>
                            <li class="@cssClassJobsOverdue">@Html.ActionLink("Hồ sơ quá hạn", "JobsOverdue", "Jobs")</li>
                        
                       
                            if(isManager)
                            {
                                <li class="@cssClassJobsEmployee">@Html.ActionLink("Hồ sơ nhân viên", "JobsEmployee", "Jobs")</li>
                            }
                        
                            <li class="@cssClassJobsStatc">@Html.ActionLink("Thống kê", "JobsStatc", "Jobs")</li>
                        }
                    </ul>
                </nav>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
