<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - DMS</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @*@Styles.Render("~/Content/css")*@
        @Scripts.Render("~/bundles/modernizr")
        
        <link href="~/Content/kendoUI/kendo.common.core.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.common.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.material.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.material.mobile.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.rtl.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.dataviz.metro.min.css" rel="stylesheet" />
        <link href="~/Content/kendoUI/kendo.dataviz.min.css" rel="stylesheet" />
        <link href="~/Content/Controls.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />

        <script src="~/Scripts/kendoUI/jquery.min.js"></script>
        <script src="~/Scripts/kendoUI/angular.min.js"></script>
        <script src="~/Scripts/kendoUI/kendo.all.min.js"></script>
        <script src="~/Scripts/kendoUI/console.js"></script>
        <script src="~/Scripts/kendoUI/jszip.min.js"></script>
        <script src="~/Scripts/kendoUI/kendo.culture.en-GB.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/common.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper module-intro">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Hệ thống quản lý JOBS", "Index", "Jobs")</p>
                </div>
                <div class="float-right">
                    
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    
                </div>
            </div>
            
        </header>
        <div id="body">
            @Html.Partial("_Menu")
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    @*<p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>*@
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
